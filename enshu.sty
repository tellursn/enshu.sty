\newcommand{\maketitlepage}{
  \thispagestyle{empty}  
  \null\vfill
  \begin{center}
    {\Huge \sffamily \@title \par}
    \ifthenelse{\equal{\@subtitle}{}}{}{%
      \vspace{5mm}
      {\LARGE \sffamily \@subtitle \par}
    }
    \vspace{20mm}
    {\Large \@gakurui \ \@grade 年 \par}
    \vspace{3mm}
    {\Large \@author \par}
  \end{center}
  \vfill
  \clearpage
  \setcounter{page}{1} 
  \pagestyle{plain}
}
